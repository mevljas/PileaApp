<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <View
        android:id="@+id/rectangle_at_the_top"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_alignParentTop="true"
        android:background="#4C7177"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="207dp"
        android:layout_height="186dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top"
        app:layout_constraintTop_toTopOf="@+id/rectangle_at_the_top"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="212dp"
        android:layout_height="230dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="96dp"

        app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top"
        app:layout_constraintTop_toTopOf="@+id/rectangle_at_the_top"
        app:srcCompat="@drawable/ic_pilea_icon"
        app:tint="#4C7177" />

    <EditText
        android:id="@+id/editText_login_email"
        android:layout_width="316dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#4C7177"
        app:backgroundTint="#4C7177"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_login_email" />

    <EditText
        android:id="@+id/editText_login_password"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#4C7177"
        app:backgroundTint="#4C7177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_login_password" />

    <TextView
        android:id="@+id/textView_login_email"
        android:layout_width="56dp"
        android:layout_height="25dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="296dp"
        android:text="Email"
        android:textColor="#4C7177"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_at_the_top" />

    <TextView
        android:id="@+id/textView_login_password"
        android:layout_width="84dp"
        android:layout_height="29dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textColor="#4C7177"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_login_email" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="318dp"
        android:layout_height="53dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_login_password" />

    <Button
        android:id="@+id/btn_login_register"
        android:layout_width="314dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:onClick="RegisterActivity"
        android:text="Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_login_or" />

    <TextView
        android:id="@+id/textView_login_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Don't have an cacount?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_login" />


</androidx.constraintlayout.widget.ConstraintLayout>


