<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="206dp"
        android:layout_height="293dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/plantsIVImage"
                android:layout_width="164dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:src="@drawable/flower"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/plantsIBWater"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:tint="#4C7177"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_water" />

            <TextView
                android:id="@+id/plantsTVName"
                android:layout_width="176dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                app:layout_constraintBottom_toTopOf="@+id/plantsTVNotes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/plantsTVNotes"
                android:layout_width="176dp"
                android:layout_height="24dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="Notes"
                android:textSize="13sp"
                android:textStyle="italic|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/plantsIBClose"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close" />

            <ImageButton
                android:id="@+id/plantsIBEdit"
                android:layout_width="39dp"
                android:layout_height="40dp"
                android:layout_marginTop="245dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_edit" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>