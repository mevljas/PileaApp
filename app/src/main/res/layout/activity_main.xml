<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <View
        android:id="@+id/mainVRectangle"
        android:layout_width="413dp"
        android:layout_height="65dp"
        android:background="@drawable/obj_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainIVCircle"
        android:layout_width="131dp"
        android:layout_height="129dp"
        android:layout_marginBottom="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_circle"
        app:tint="#53787E" />

    <ImageView
        android:id="@+id/mainIVLogo"
        android:layout_width="166dp"
        android:layout_height="162dp"

        android:layout_marginBottom="584dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_pilea_icon"
        app:tint="@color/white" />

    <Button
        android:id="@+id/mainBPlants"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:onClick="PlantsActivity"
        android:text="Plants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainBFriends"
        android:layout_width="174dp"
        android:layout_height="49dp"
        android:layout_marginTop="68dp"
        android:onClick="FriendsActivity"
        android:text="Friends"
        app:layout_constraintStart_toStartOf="@+id/mainBPlants"
        app:layout_constraintTop_toTopOf="@+id/mainBPlants" />

    <Button
        android:id="@+id/mainBCategories"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginTop="64dp"
        android:onClick="CategoriesActivity"
        android:text="Categories"
        app:layout_constraintEnd_toEndOf="@+id/mainBLocations"
        app:layout_constraintTop_toTopOf="@+id/mainBLocations" />

    <Button
        android:id="@+id/mainBLogin"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:onClick="LoginActivity"
        android:text="Login"
        app:layout_constraintStart_toStartOf="@+id/mainBFriends"
        app:layout_constraintTop_toBottomOf="@+id/mainBFriends" />

    <Button
        android:id="@+id/mainBLocations"
        android:layout_width="158dp"
        android:layout_height="49dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="28dp"
        android:onClick="LocationsActivity"
        android:text="Locations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainIVPlants"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginBottom="16dp"
        android:onClick="PlantsActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_cactus_foreground" />

    <ImageView
        android:id="@+id/mainIVCategories"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="16dp"
        android:onClick="CategoriesActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainIVPlants"
        app:srcCompat="@mipmap/ic_details_foreground" />

    <ImageView
        android:id="@+id/mainIVHome"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainIVCategories"
        app:srcCompat="@mipmap/ic_home" />

    <ImageView
        android:id="@+id/mainIVFriends"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:onClick="FriendsActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mainIVLocations"
        app:srcCompat="@mipmap/ic_social" />

    <ImageView
        android:id="@+id/mainIVLocations"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="98dp"
        android:layout_marginBottom="16dp"
        android:onClick="LocationsActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mainIVPlants"
        app:srcCompat="@mipmap/ic_location" />


</androidx.constraintlayout.widget.ConstraintLayout>