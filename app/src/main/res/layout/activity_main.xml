<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <View
        android:id="@+id/mainVRectangle"
        android:layout_width="413dp"
        android:layout_height="65dp"
        android:background="@drawable/obj_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainIVCircle"
        android:layout_width="131dp"
        android:layout_height="129dp"
        android:layout_marginBottom="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_circle"
        app:tint="#53787E" />

    <ImageView
        android:id="@+id/mainIVLogo"
        android:layout_width="166dp"
        android:layout_height="162dp"

        android:layout_marginBottom="584dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_pilea_icon"
        app:tint="@color/white" />

    <Button
        android:id="@+id/mainBPlants"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:onClick="PlantsActivity"
        android:text="Plants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainBCategories"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="16dp"
        android:onClick="CategoriesActivity"
        android:text="Categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainBLocations" />

    <Button
        android:id="@+id/mainBLogin"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="136dp"
        android:onClick="LoginActivity"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBPlants" />

    <Button
        android:id="@+id/mainBLocations"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="16dp"
        android:onClick="LocationsActivity"
        android:text="Locations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainIVPlants"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginBottom="508dp"
        android:onClick="PlantsActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_cactus_foreground" />

    <ImageView
        android:id="@+id/mainIVCategories"
        android:layout_width="93dp"
        android:layout_height="92dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="320dp"
        android:onClick="CategoriesActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_details_foreground" />

    <ImageView
        android:id="@+id/mainIVLocations"
        android:layout_width="85dp"
        android:layout_height="88dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="36dp"
        android:onClick="LocationsActivity"
        app:layout_constraintBottom_toBottomOf="@+id/mainBLocations"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_location" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="112dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:onClick="LoginActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBPlants"
        app:srcCompat="@drawable/ic_circle"
        app:tint="#4C7177" />

    <ImageView
        android:id="@+id/mainIVLogin"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/ic_login"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>