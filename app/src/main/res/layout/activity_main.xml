<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/categories"
        android:layout_width="357dp"
        android:layout_height="424dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="10dp"
        android:text="Categories list."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/PlantsIndex"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="PlantsActivity"
        android:text="Plants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LocationsIndex"
        android:layout_width="158dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:onClick="LocationsActivity"
        android:text="Locations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/FriendsIndex"
        android:layout_width="174dp"
        android:layout_height="49dp"
        android:layout_marginTop="64dp"
        android:onClick="FriendsActivity"
        android:text="Friends"
        app:layout_constraintStart_toStartOf="@+id/PlantsIndex"
        app:layout_constraintTop_toTopOf="@+id/PlantsIndex" />

    <Button
        android:id="@+id/btn_categoriesIndex"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginTop="65dp"
        android:onClick="CategoriesActivity"
        android:text="Categories"
        app:layout_constraintEnd_toEndOf="@+id/LocationsIndex"
        app:layout_constraintTop_toTopOf="@+id/LocationsIndex" />

    <Button
        android:id="@+id/LoginIndex"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="LoginActivity"
        android:text="Login"
        app:layout_constraintStart_toStartOf="@+id/FriendsIndex"
        app:layout_constraintTop_toBottomOf="@+id/FriendsIndex" />
</androidx.constraintlayout.widget.ConstraintLayout>