<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    android:padding="5dp">

    <EditText
        android:id="@+id/locationsEditPopUpETDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New description"
        android:textColor="#9E9E9E"
        app:backgroundTint="#9E9E9E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationsEditPopUpTVDescription" />

    <Button
        android:id="@+id/locationsEditPopUpBYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="20dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/locationsEditPopUpBNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#B6B6B6"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/locationsEditPopUpTVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/locationsEditPopUpTVName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/locationsEditPopUpETInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New name"
        android:textColor="#9E9E9E"
        app:backgroundTint="#9E9E9E"
        app:layout_constraintStart_toStartOf="@+id/locationsEditPopUpTVDescription"
        app:layout_constraintTop_toBottomOf="@+id/locationsEditPopUpTVName" />

    <TextView
        android:id="@+id/locationsEditPopUpTVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/locationsEditPopUpETInput"
        app:layout_constraintTop_toBottomOf="@+id/locationsEditPopUpTVTitle" />

    <TextView
        android:id="@+id/locationsEditPopUpTVDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/locationsEditPopUpETDescription"
        app:layout_constraintTop_toBottomOf="@+id/locationsEditPopUpETInput" />
</androidx.constraintlayout.widget.ConstraintLayout>